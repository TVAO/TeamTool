
<!-- Project Overview Page -->

@using TeamTool.Models
@model IEnumerable<TeamTool.Models.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = "Projects";
}

<h2> Projects </h2>

<div div style="height: 350px; overflow: auto">
    <table class="table">

        <!-- Column titles -->
        <tr>
            <th> Project </th>
            <!-- <th> Created </th> -->
            <th> Action </th>
            
            <th> Team </th>
            
            <th> Approved </th>
        </tr>
        
        @if (Model != null)
        {
            foreach (var project in Model)
            {
                <tr>
                    <td>
                        @project.Name
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => team.CreationDate)
                        </td>*@
                    <td>
                        <a asp-controller="Project"
                           asp-action="EditProject"
                           asp-route-id="@project.Id"
                           class="btn btn-info">
                            Edit
                        </a>
                        <a asp-controller="Project"
                           asp-action="DeleteProject"
                           asp-route-id="@project.Id"
                           class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                    <td>
                        @if(project.Team != null)
                        {
                            @project.Team.Name
                        }
                    </td>
                    <td>
                        @project.IsApproved
                    </td>

                </tr>
            }
        }
        

    </table>

</div>
<div>
    <p>
        <a asp-controller="Project"
           asp-action="RequestProject"
           class="btn btn-success">
            Add Project
        </a>
    </p>

</div>
