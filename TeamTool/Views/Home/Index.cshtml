
<!-- Home Page with Signifly pictures -->

@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel used to display different Signifly pictures every 6th second -->

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img src="~/images/signifly/Signifly1.PNG" alt="ASP.NET" class="img-responsive"/>
        </div>

        <div class="item">
            <img src="~/images/signifly/Signifly2.PNG" alt="Visual Studio" class="img-responsive"/>
        </div>

        <div class="item">
            <img src="~/images/signifly/Signifly3.PNG" alt="Package Management" class="img-responsive"/>
        </div>

        <div class="item">
            <img src="~/images/signifly/Signifly4.PNG" alt="Microsoft Azure" class="img-responsive"/>
        </div>

    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

<div class="row">
    
    <div class="col-md-4">
        <h2>Technology</h2>
        <ul>
            <li> ASP.NET Core MVC</li>
            <li> Entity Framework Core (local SQL) </li>
            <li> jQuery Input Validation </li>
            @*<li><a href="https://go.microsoft.com/fwlink/?LinkId=518004">Bower</a> for client-side libraries</li>*@
            <li>Razor Views & <a href="https://go.microsoft.com/fwlink/?LinkID=398939">Bootstrap</a> Theming </li>
        </ul>
    </div>

    <div class="col-md-4">
        <h2>Features</h2>
        <ul>
            <li> See an overview of all teams </li>
            <li> Create, modify and delete a team </li>
            <li> See an overview of all projects </li>
            <li> Create, modify and delete projects </li>
        </ul>
    </div>

    <div class="col-md-4">
        <h2> Missing </h2>
        <ul>
            <li> Signifly Styling </li>
            <li> Show team information with pictures </li>
            <li> Bug: Members not added to team upon creation </li>
            <li> Assumptions: Authentication N/A, Project Creation and Deadline N/A, Team Members hard coded </li>
        </ul>
    </div>

</div>
